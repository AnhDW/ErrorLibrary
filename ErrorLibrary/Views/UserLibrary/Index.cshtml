@model List<ErrorDto>
@{
    ViewData["Title"] = "Thư viện tài khoản";
}
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Thư viện tài khoản</span></h4>
        <div>
            <button type="button" class="btn rounded-pill btn-primary" data-bs-toggle="modal"
                    data-bs-target="#addModel">
                <span class="tf-icons bx bx-plus"></span>&nbsp; Thêm
            </button>
            <!-- Add Modal -->
            <div class="modal fade" id="addModel" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalCenterTitle">Thêm tài khoản</h5>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <form action="/" method="post">
                            <div class="modal-body">
                                <div class="mb-2">
                                    <label for="defaultFormControlInput" class="form-label">Tên đăng nhập</label>
                                    <input type="text" class="form-control" id="defaultFormControlInput" placeholder="Nhập tên đăng nhập" aria-describedby="defaultFormControlHelp">
                                </div>
                                <div class="mb-2">
                                    <label for="defaultFormControlInput" class="form-label">Mật khẩu</label>
                                    <input type="password" class="form-control" id="defaultFormControlInput" placeholder="Nhập mật khẩu" aria-describedby="defaultFormControlHelp">
                                </div>
                                <div class="mb-2">
                                    <label for="defaultFormControlInput" class="form-label">Họ tên</label>
                                    <input type="text" class="form-control" id="defaultFormControlInput" placeholder="Nhập họ tên" aria-describedby="defaultFormControlHelp">
                                </div>
                                <div class="mb-2">
                                    <label for="defaultFormControlInput" class="form-label">Email</label>
                                    <input type="text" class="form-control" id="defaultFormControlInput" placeholder="Nhập email" aria-describedby="defaultFormControlHelp">
                                </div>
                                <div class="mb-2">
                                    <label for="defaultFormControlInput" class="form-label">Đơn vị</label>
                                    <input type="text" class="form-control" id="defaultFormControlInput" placeholder="Nhập đơn vị" aria-describedby="defaultFormControlHelp">
                                </div>
                                <div class="mb-2">
                                    <label for="formFile" class="form-label">Ảnh</label>
                                    <input class="form-control" type="file" id="formFile">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                    Đóng
                                </button>
                                <button type="button" class="btn btn-primary">Lưu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Edit Modal -->
